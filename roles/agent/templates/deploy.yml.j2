---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: {{ agent_stateful_set_name }}
  namespace: {{ agent_namespace }}
  labels:
    app: {{ agent_stateful_set_name }}
spec:
  serviceName: {{ agent_stateful_set_name }}
  replicas: {{ replicas | default(1) }}
  selector:
    matchLabels:
      app: {{ agent_stateful_set_name }}
  updateStrategy:
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: {{ agent_stateful_set_name }}
    spec:
      nodeSelector:
{% if agent_has_docker %}
        kubernetes.io/role: worker
{% endif %}
        kubernetes.io/arch: {{ agent_arch }}
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            - labelSelector:
                matchExpressions:
                  - key: app
                    operator: In
                    values:
                      - {{ agent_stateful_set_name }}
              topologyKey: kubernetes.io/hostname
              whenUnsatisfiable: DoNotSchedule
      containers:
      - name: agent
        image: coffee206/github-actions:{{ agent_tag }}
        imagePullPolicy: Always
        resources:
          limits:
            cpu: {{ agent_cpu_limits | default('500m') }}
            memory: {{ agent_mem_limits | default('512Mi') }}
          requests:
            cpu: {{ agent_cpu_requests | default('100m') }}
            memory: {{ agent_mem_requests | default('256Mi') }}
        volumeMounts:
{% if agent_can_ssh | default(false) %}
          - name: ssh-keys
            mountPath: /usr/mware/agent/.ssh
            readOnly: true
{% endif %}
{% if agent_has_docker | default(false) %}
          - name: docker-socket
            mountPath: /var/run/docker.sock
{% endif %}
          - name: workdir
            mountPath: /usr/mware/agent/_work
        env:
          - name: HTTP_PROXY
            value: http://{{ internet_proxy }}
          - name: HTTPS_PROXY
            value: http://{{ internet_proxy }}
          - name: NO_PROXY
            value: {{ no_proxy }}
          - name: FTP_PROXY
            value: ftp://{{ internet_proxy }}
          - name: PROXY
            value: http://{{ internet_proxy }}
          - name: TOKEN
            valueFrom:
              secretKeyRef:
                name: gh-actions-token
                key: TOKEN
          - name: GH_ACTIONS_HC_TOKEN
            valueFrom:
              secretKeyRef:
                name: gh-healthcheck-token
                key: TOKEN
          - name: GH_ACTIONS_LABELS
            value: {{ agent_labels | default('docker') }}
          - name: GH_ACTIONS_URL
            value: https://github.com/espresso-software
        readinessProbe:
          exec:
            command:
            - /usr/mware/agent/probe.sh
            - readiness
          initialDelaySeconds: 15
          periodSeconds: 30
          timeoutSeconds: 20
          successThreshold: 1
          failureThreshold: 3
        livenessProbe:
          exec:
            command:
            - /usr/mware/agent/probe.sh
            - liveness
          initialDelaySeconds: 15
          periodSeconds: 30
          timeoutSeconds: 20
          successThreshold: 1
          failureThreshold: 3
        startupProbe:
          exec:
            command:
            - /usr/mware/agent/probe.sh
            - startup
          initialDelaySeconds: 30
          periodSeconds: 15
          timeoutSeconds: 15
          successThreshold: 1
          failureThreshold: 10
      volumes:
        - name: workdir
          emptyDir: {}
{% if agent_has_docker | default(false) %}
        - name: docker-socket
          hostPath:
            path: /var/run/docker.sock
            type: Socket
{% endif %}
{% if agent_can_ssh | default(false) %}
        - name: ssh-keys
          secret:
            secretName: gh-actions-ssh-keys
{% endif %}
