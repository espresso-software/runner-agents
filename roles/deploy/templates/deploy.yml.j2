---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: {{ stateful_set_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ stateful_set_name }}
spec:
  serviceName: {{ stateful_set_name }}
  replicas: {{ replicas | default(1) }}
  selector:
    matchLabels:
      app: {{ stateful_set_name }}
  updateStrategy:
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: {{ stateful_set_name }}
    spec:
      nodeSelector:
        kubernetes.io/role: worker
        kubernetes.io/arch: {{ arch }}
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            - labelSelector:
                matchExpressions:
                  - key: app
                    operator: In
                    values:
                      - {{ stateful_set_name }}
              topologyKey: kubernetes.io/hostname
              whenUnsatisfiable: DoNotSchedule
      containers:
      - name: agent
        image: coffee206/github-actions:{{ tag }}
        imagePullPolicy: Always
        resources:
          limits:
            cpu: {{ cpu_limits | default('500m') }}
            memory: {{ mem_limits | default('512Mi') }}
          requests:
            cpu: {{ cpu_requests | default('250m') }}
            memory: {{ mem_requests | default('256Mi') }}
        volumeMounts:
          - name: docker-socket
            mountPath: /var/run/docker.sock
          - name: workdir
            mountPath: /usr/mware/agent/_work
        env:
          - name: TOKEN
            valueFrom:
              secretKeyRef:
                name: gh-actions-token
                key: TOKEN
          - name: GH_ACTIONS_HC_TOKEN
            valueFrom:
              secretKeyRef:
                name: gh-healthcheck-token
                key: TOKEN
          - name: GH_ACTIONS_LABELS
            value: uat
          - name: GH_ACTIONS_URL
            value: https://github.com/espresso-software
        readinessProbe:
          exec:
            command:
            - /usr/mware/agent/probe.sh
            - readiness
          initialDelaySeconds: 15
          periodSeconds: 30
          timeoutSeconds: 20
          successThreshold: 1
          failureThreshold: 3
        livenessProbe:
          exec:
            command:
            - /usr/mware/agent/probe.sh
            - liveness
          initialDelaySeconds: 15
          periodSeconds: 30
          timeoutSeconds: 20
          successThreshold: 1
          failureThreshold: 3
        startupProbe:
          exec:
            command:
            - /usr/mware/agent/probe.sh
            - startup
          initialDelaySeconds: 30
          periodSeconds: 15
          timeoutSeconds: 15
          successThreshold: 1
          failureThreshold: 10
      volumes:
      - name: docker-socket
        hostPath:
          path: /var/run/docker.sock
          type: Socket
      - name: workdir
        emptyDir: {}
