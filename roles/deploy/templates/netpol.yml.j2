---
apiVersion: projectcalico.org/v3
kind: NetworkPolicy
metadata:
  name: agent-allow
  namespace: {{ namespace }}
spec:
  selector: agent == 'github-actions'
  types:
    - Ingress
    - Egress
  ingress:
  egress:
    - action: Allow
      protocol: TCP
      destination:
        ports:
          - 3128
        nets:
          - {{ network.proxy | split(':') | first }}/32